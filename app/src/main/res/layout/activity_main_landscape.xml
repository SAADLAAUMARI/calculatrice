<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/bord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50sp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#000000"
                    android:onClick="onButtonClick"
                    android:text="1" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="2" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="3" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#040404"
                    android:textColorHint="#000000"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="4" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="5" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="6" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="-"
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="7" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="8" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="9" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="*"
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="."
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button20"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#020202"
                    android:onClick="onButtonClick"
                    android:text="0" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="/"
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="="
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="C"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:onClick="onButtonClick"
                    android:text="AC"
                    android:textColorHighlight="#040404"
                    android:textColorLink="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="323dp"
            android:layout_marginTop="60sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_rad"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_deg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="deg" />

                <Button
                    android:id="@+id/button_rad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="rad" />

                <Button
                    android:id="@+id/button_sin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="sin" />

            </LinearLayout>

            <!-- Deuxième rangée de boutons -->
            <LinearLayout
                android:id="@+id/second_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_row_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="cos" />

                <Button
                    android:id="@+id/button_tan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="tan" />

                <Button
                    android:id="@+id/button_inv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="!" />

            </LinearLayout>

            <!-- Troisième rangée de boutons -->
            <LinearLayout
                android:id="@+id/third_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_row_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10sp"
                android:onClick="onButtonClick"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_log"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="log" />

                <Button
                    android:id="@+id/button_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="ln" />

                <Button
                    android:id="@+id/button_pi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="pi" />

            </LinearLayout>

            <!-- Quatrième rangée de boutons -->
            <LinearLayout
                android:id="@+id/fourth_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/third_row_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="e" />

                <Button
                    android:id="@+id/button_power"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="^" />

                <Button
                    android:id="@+id/button_square_root"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="√" />

            </LinearLayout>

            <!-- Cinquième rangée de boutons -->
            <LinearLayout
                android:id="@+id/fifth_row_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourth_row_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_left_parenthesis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text="(" />

                <Button
                    android:id="@+id/button_right_parenthesis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:text=")" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
